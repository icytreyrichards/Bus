<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_margin="2dp"
        android:paddingBottom="20dp"
        android:id="@+id/cv"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="05dp">
            <ImageView
                android:id="@+id/imageViewcustomseat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/seat"
                android:layout_alignRight="@+id/textViewcustomtitle"
                android:layout_alignEnd="@+id/textViewcustomtitle" />

            <TextView
                android:id="@+id/textViewcustomseatnumber"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="seat 23"

                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/textViewcustomseatstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:layout_alignTop="@+id/textViewtheemergencyFullname"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>