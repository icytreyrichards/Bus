<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/grey">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    />
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" android:layout_margin="5dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="30dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:layout_margin="20dp"
                    >
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/rv"
                            />
                        </LinearLayout>
        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginBottom="30dp"
                            >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="2dp"
                                    android:layout_margin="20dp"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="10dp"
                                            android:text="Addresss and Contact Details"
                                            android:textSize="30sp"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="10dp"
                                            android:text="Status"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />

                                        <TextView
                                            android:id="@+id/txAddressDetails"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="10dp" android:textSize="20sp"
                                            android:text="Ticket "
                                            android:textAppearance="?android:attr/textAppearanceLarge" />


                                </LinearLayout>
                        </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardadmin"
android:layout_width="match_parent"
android:layout_height="wrap_content" android:layout_marginBottom="30dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_margin="20dp"
    >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Status" android:textSize="30sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:id="@+id/imageViewbarcode"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@color/com_facebook_button_login_silver_background_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp" android:textSize="20sp"
            android:text="Ticket management"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/editTextmessage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Message Here"
            android:inputType="textPersonName"
            android:paddingTop="15dp"
            android:text="" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinnerproducer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_margin="20dp"
            >
                <Button
                    android:id="@+id/buttonscan" android:layout_marginRight="10dp"
                    android:layout_width="150dp" android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:background="@color/accent"
                    android:text="Scan Ticket"
                    android:textColor="@color/white" />
        <Button
            android:id="@+id/buttonpost"
            android:layout_width="wrap_content" android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@color/primary_dark"
            android:text="Process Ticket"
            android:textColor="@color/white" />
                </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
        </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
        </LinearLayout>